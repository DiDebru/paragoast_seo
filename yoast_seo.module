/**
 * Implements hook_theme().
 */
function yoast_seo_theme() {
  $theme['snippet'] = [
    'variables' => [
      'wrapper_target_id' => NULL,
      'snippet_target_id' => NULL,
      'output_target_id' => NULL,
    ],
    'template' => 'snippet',
  ];

  $theme['overall_score'] = [
    'variables' => [
      'overall_score_target_id' => NULL,
      'overall_score' => NULL,
    ],
    'template' => 'overall_score',
  ];

  $theme['content_score'] = [
    'variables' => [],
    'template' => 'content_score',
  ];

  return $theme;
}

